<p id="notice"><%= notice %></p>

<h1 style="color: mediumvioletred" >Категории</h1>

<table>
  <thead>
  <tr style="color: red; font-size: 2">
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to 'Показать', category %></td>
        <td><%= link_to 'Редактировать', edit_category_path(category) %></td>
        <td><%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая категория', new_category_path %>

